<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <TextView
        android:id="@+id/sosalerttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="@string/text_sos_alert"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextBlack"/>

    <TextView
        android:id="@+id/clickbtntv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorTextBlack"
        android:text="@string/text_click_button" />

    <TextView
        android:id="@+id/sendhelptv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorTextBlack"
        android:text="@string/text_send_help" />

    <TextView
        android:id="@+id/pruebacoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Coordinates"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/pruebaCOORD"
        android:text="REQUEST LOCATION"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/btnSOS"
        android:layout_width="280sp"
        android:layout_height="280sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50sp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/sos_btn" />


</LinearLayout>