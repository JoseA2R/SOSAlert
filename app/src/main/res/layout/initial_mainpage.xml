<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800">

    <TextView
        android:id="@+id/main_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="LOREM"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
         />
    <TextView
        android:id="@+id/main_design2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_design"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="IPSUM"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"

        />

    <Spinner
        android:id="@+id/language_spinner"
        android:background="@drawable/spinner_background"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:prompt="@string/select_language"
        android:layout_alignEnd="@+id/main_design"
        android:layout_alignStart="@+id/main_design"
        android:layout_below="@+id/main_design2"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        />


</RelativeLayout>