<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF9800"
    tools:context=".Fragments.CountDownFragment">


    <TextView
        android:id="@+id/sosalerttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/text_sos_alert"
        android:textColor="@color/colorTextBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clickbtntv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sosalerttv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/text_click_button"
        android:textColor="@color/colorTextBlack" />


    <ImageButton
        android:id="@+id/sos_img_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/sos_btn_pressed"
        android:background="#FF9800"
       />

</RelativeLayout>