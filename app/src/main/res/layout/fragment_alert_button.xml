<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_alert_button"
    android:orientation="vertical"
    android:background="#9e9e9e">


    <TextView
        android:id="@+id/sosalerttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="@string/text_sos_alert"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clickbtntv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sosalerttv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/text_click_button"
        android:textColor="@color/white" />


    <ImageButton
        android:id="@+id/sos_img_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_sending_message"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/sos_1" />

    <TextView
        android:id="@+id/txt_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_sending_message"
        android:layout_toEndOf="@+id/tv_sending_message"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/sos_img_btn"
        android:layout_alignStart="@+id/sos_img_btn"
        android:layout_alignEnd="@+id/sos_img_btn"
        android:layout_alignBottom="@+id/sos_img_btn"
        android:gravity="center"
        android:textSize="200sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/cancel_btn"
        android:text="@string/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:id="@+id/tv_sending_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel_btn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>