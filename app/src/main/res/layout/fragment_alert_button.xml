<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9e9e9e">


    <TextView
        android:id="@+id/sosalerttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clickbtntv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:text="@string/text_sos_alert"
        android:textColor="@color/colorTextBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clickbtntv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sos_img_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"
        android:text="@string/text_click_button"
        android:textColor="@color/colorTextBlack" />


    <ImageButton
        android:id="@+id/sos_img_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#9e9e9e"
        app:srcCompat="@drawable/sosimgbtn" />

    <TextView
        android:id="@+id/txtLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLongitude"
        android:text="Latitude: "
        android:textColor="@color/colorTextBlack"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/txtLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sos_img_btn"
        android:layout_marginEnd="6dp"
        android:text="Longitude: "
        android:textColor="@color/colorTextBlack"
        android:textSize="24dp" />


</RelativeLayout>