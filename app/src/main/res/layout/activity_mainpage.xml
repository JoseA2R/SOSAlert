<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/firefighter_waiting_next_call"
    android:orientation="vertical"
    tools:context="com.acin.josefigueira.sosalert.View.WelcomeMainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_alert"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView" />


    <Button
        android:id="@+id/app-start-btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#E28F4B"
        android:onClick="onClick"
        android:text="@string/next_btn1"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>
