<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <inset>
        <shape android:shape="rectangle">
            <size
                android:width="200dp"
                android:height="200dp" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="0dp"/>
        </shape>
        </inset>
    </item>

    <!-- This rectangle for the top arrow edge -->
    <!-- Its color should be the same as the layout's background -->
    <!--  android:drawable="@drawable/firefighter_waiting_next_call" -->
    <item
      android:top="-100dp"
      android:bottom="120dp" >
      <rotate
          android:fromDegrees="0">

          <shape
              android:drawable="@drawable/firefighter_waiting_next_call"
              android:shape="oval"  >

              <solid android:color="#80000000" />
              <size
                  android:width="20dp"
                  android:height="20dp" />
          </shape>

      </rotate>
  </item>


  <!-- This rectangle for the lower arrow edge -->
    <!-- Its color should be the same as the layout's background -->


</layer-list>